#! /bin/bash

set -e

DEBIAN_RELEASE=bullseye

# full directory name of the script no matter where it is being called from
SCRIPT_DIR=$(dirname $(realpath $0))

# extract node version from '.nvmrc'
NODE_FULL_VERSION=$(cat "${SCRIPT_DIR}"/../.nvmrc | sed -e 's/^v//')
NODE_VERSION=$(echo "$NODE_FULL_VERSION" | awk -F. '{print $1"."$2}')

if [ "$SKIP_NPM_CI" == "" ]; then
  # Install node dependencies
  npm ci
  cd cli && npm ci && cd ..
  cd common-files && npm ci && cd ..
fi

OS_ARCH=$(uname -m)
NO_CACHE_FLAG=''

# Workaround when building in a Mac
if [ $OS_ARCH != "x86_64" ]; then
  NO_CACHE_FLAG='--no-cache'
fi

BUILDKIT=''
if [[ -n "$DOCKER_BUILDKIT" ]]; then 
  BUILDKIT=buildx
fi

if [ "$SKIP_CIRCOM_BUILD" == "" ]; then
  docker $BUILDKIT build $NO_CACHE_FLAG -t ghcr.io/eyblockchain/local-circom - < docker/circom.Dockerfile
fi


# containers built separately. A parallel build fails.

if [[ -z "${NF_SERVICES_TO_START}" || "${NF_SERVICES_TO_START}" == *"administrator"* ]]; then
  docker $BUILDKIT build $NO_CACHE_FLAG --build-arg NODE_VERSION="${NODE_VERSION}" --build-arg DEBIAN_RELEASE="${DEBIAN_RELEASE}" -t ghcr.io/eyblockchain/nightfall3-administrator -f docker/admin.Dockerfile .
fi

if [[ -z "${NF_SERVICES_TO_START}" || "${NF_SERVICES_TO_START}" == *"challenger"* ]]; then
  docker $BUILDKIT build $NO_CACHE_FLAG --build-arg NODE_VERSION="${NODE_VERSION}" --build-arg DEBIAN_RELEASE="${DEBIAN_RELEASE}" -t ghcr.io/eyblockchain/nightfall3-challenger -f docker/challenger.Dockerfile .
fi

if [[ -z "${NF_SERVICES_TO_START}" || "${NF_SERVICES_TO_START}" == *"client"* || "${NF_SERVICES_TO_START}" == *"adversary"* ]]; then
  docker $BUILDKIT build $NO_CACHE_FLAG --build-arg NODE_VERSION="${NODE_VERSION}" --build-arg DEBIAN_RELEASE="${DEBIAN_RELEASE}" -t ghcr.io/eyblockchain/nightfall3-client -f docker/client.Dockerfile .
fi

if [[ -z "${NF_SERVICES_TO_START}" || "${NF_SERVICES_TO_START}" == *"deployer"* ]]; then
  docker $BUILDKIT build $NO_CACHE_FLAG --build-arg NODE_VERSION="${NODE_VERSION}" --build-arg DEBIAN_RELEASE="${DEBIAN_RELEASE}" -t ghcr.io/eyblockchain/nightfall3-deployer -f docker/deployer.Dockerfile .
fi

if [[ -z "${NF_SERVICES_TO_START}" || "${NF_SERVICES_TO_START}" == *"hosted-utils-api-server"* ]]; then
  docker $BUILDKIT build $NO_CACHE_FLAG --build-arg NODE_VERSION="${NODE_VERSION}" --build-arg DEBIAN_RELEASE="${DEBIAN_RELEASE}" -t ghcr.io/eyblockchain/nightfall3-hosted-utils-api-server -f docker/hosted-utils-api-server.Dockerfile ./hosted-utils-api-server
fi

if [[ -z "${NF_SERVICES_TO_START}" || "${NF_SERVICES_TO_START}" == *"optimist"* || "${NF_SERVICES_TO_START}" == *"adversary"* ]]; then
  docker $BUILDKIT build $NO_CACHE_FLAG --build-arg NODE_VERSION="${NODE_VERSION}" --build-arg DEBIAN_RELEASE="${DEBIAN_RELEASE}" -t ghcr.io/eyblockchain/nightfall3-optimist -f docker/optimist.Dockerfile .
fi

if [[ -z "${NF_SERVICES_TO_START}" || "${NF_SERVICES_TO_START}" == *"proposer"* ]]; then
  docker $BUILDKIT build $NO_CACHE_FLAG --build-arg NODE_VERSION="${NODE_VERSION}" --build-arg DEBIAN_RELEASE="${DEBIAN_RELEASE}" -t ghcr.io/eyblockchain/nightfall3-proposer -f docker/proposer.Dockerfile .
fi

if [[ -z "${NF_SERVICES_TO_START}" || "${NF_SERVICES_TO_START}" == *"worker"* ]]; then
  docker $BUILDKIT build $NO_CACHE_FLAG --build-arg NODE_VERSION="${NODE_VERSION}" --build-arg DEBIAN_RELEASE="${DEBIAN_RELEASE}" -t ghcr.io/eyblockchain/nightfall3-worker -f docker/worker.Dockerfile .
fi
